<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:padding="10dp"
    android:paddingBottom="0dp"

    >

    <TextView
        android:id="@+id/call_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:paddingLeft="52dp"
        android:text="03234433108"
        android:textSize="15dp"/>

    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/call_number"
        android:layout_centerHorizontal="true"

        >

        <Button
            android:id="@+id/bIgnore"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="120dp"
            android:layout_height="27dp"
            android:background="@drawable/btn_primary"
            android:drawableLeft="@drawable/call_details_icon_white"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:radius="5dip"
            android:text="Details"
            android:textColor="#ffffff"
            android:textSize="12dp"
            />


        <Button
            android:id="@+id/call_tag_btn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="120dp"
            android:layout_height="27dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/bIgnore"
            android:background="@drawable/btn_primary"
            android:drawableLeft="@drawable/tag_icon_white"
            android:paddingBottom="5dp"
            android:paddingLeft="30dp"
            android:paddingRight="25dp"
            android:paddingTop="5dp"
            android:radius="5dip"
            android:text="Tag"
            android:textColor="#ffffff"
            android:textSize="12dp"

            />

    </RelativeLayout>


</RelativeLayout>