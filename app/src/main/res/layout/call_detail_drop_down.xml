<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginTop="30dp"

    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="52dp"
        android:textSize="15dp"
        android:text="03234433108"
        android:layout_marginBottom="20dp"
        android:id="@+id/call_number" />

    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/call_number"
        android:layout_centerHorizontal="true"

        >

    <Button
        android:id="@+id/call_details_btn"
        android:layout_width="125dp"
        android:layout_height="25dp"
        android:text="Details"
        android:drawableLeft="@drawable/call_details_icon_white"
        style="?android:attr/borderlessButtonStyle"
        android:background="@drawable/btn_primary"
        android:textColor="#ffffff"

        android:radius="5dip"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:textSize="12dp"
        />


    <Button
        android:id="@+id/call_tag_btn"
        android:layout_width="125dp"
        android:layout_height="25dp"
        android:text="Tag"
        android:drawableLeft="@drawable/tag_icon_white"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginLeft="10dp"
        android:textColor="#ffffff"
        android:background="@drawable/btn_primary"
        android:layout_toRightOf="@id/call_details_btn"
        android:radius="5dip"
        android:textSize="12dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="30dp"
        android:paddingRight="25dp"

        />

        </RelativeLayout>



</RelativeLayout>