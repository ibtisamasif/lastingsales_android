            <!--</LinearLayout>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#023a5f"
                android:orientation="horizontal"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/user_avatar"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        fresco:placeholderImage="@drawable/ic_account_circle"
                        fresco:roundAsCircle="true"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:padding="2dp">

                        <TextView
                            android:id="@+id/tvName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/tvNoteTextUIOCallPopup"
                            android:layout_alignStart="@+id/tvNoteTextUIOCallPopup"
                            android:layout_marginEnd="20dp"
                            android:layout_marginRight="20dp"
                            android:ellipsize="end"
                            android:text="UNKNOWN"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvNoteHeading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/tvNoteTextUIOCallPopup"
                            android:layout_alignStart="@+id/tvNoteTextUIOCallPopup"
                            android:layout_below="@+id/tvName"
                            android:layout_centerVertical="true"
                            android:text="Note:"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvNoteTextUIOCallPopup"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvNoteHeading"
                            android:layout_marginBottom="1dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginStart="10dp"
                            android:maxLines="4"
                            android:textSize="12sp" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/ibClose"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="@drawable/close_icon" />
                </LinearLayout>
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_rounded_rectangle_buttons_bg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:weightSum="10">

                        <TextView
                            android:id="@+id/tvCallerHistoryName0"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_gravity="start"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_weight="2.5"
                            android:maxLines="3"
                            android:text="Last contacted with me"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_gravity="left"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_weight="2.5"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvCallerHistoryLastCallDateTime0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="3"
                                android:text="3-Jan-2017"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/tvCallerHistoryLastCallTimeAgo0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="6dp"
                                android:layout_marginStart="6dp"
                                android:maxLines="1"
                                android:textSize="10sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvCallerHistoryName1"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_gravity="left"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_weight="2.5"
                            android:maxLines="1"
                            android:text="Last contacted Ibtisam Asif"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_gravity="left"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_weight="2.5"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvCallerHistoryLastCallDateTime1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="3"
                                android:text="2-Jan-2017"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/tvCallerHistoryLastCallTimeAgo1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginStart="10dp"
                                android:maxLines="3"
                                android:textSize="10sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ivLogo"
                        android:layout_width="0dp"
                        android:layout_height="54dp"
                        android:layout_weight="2"
                        app:srcCompat="@drawable/login_logo" />

                </LinearLayout>


            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</com.example.muzafarimran.lastingsales.chatheadbubble.BubbleLayout>