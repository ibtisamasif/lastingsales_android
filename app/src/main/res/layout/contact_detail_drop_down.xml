<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:paddingLeft="25dp"
              android:paddingRight="25dp"
              android:paddingTop="20dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:id="@+id/last_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            >

            <ImageView
                android:id="@+id/last_contact_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingRight="10dp"
                />

            <TextView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/last_contact_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/last_contact_icon"
                android:text="Last Contact"
                android:textColor="#ffffff"
                android:textSize="12dp"
                />

            <TextView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/last_contact_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="fitEnd"
                android:text="2 Days Ago"
                android:textColor="#ffffff"
                android:textSize="12dp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/number_calls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/calls_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingRight="10dp"
                />


            <TextView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/calls_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/calls_icon"
                android:text="Calls"
                android:textColor="#ffffff"
                android:textSize="12dp"/>


            <TextView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/calls_text"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="fitEnd"
                tools:text="4"
                android:textColor="#ffffff"
                android:textSize="12dp"/>

        </RelativeLayout>

        <Button
            android:id="@+id/contactDetailsDropDownDetailsButton"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"

            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:radius="5dip"
            android:tag="personal_radio"
            android:text="Details"
            android:textSize="14sp"
            />
    </LinearLayout>

</LinearLayout>