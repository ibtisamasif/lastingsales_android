<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="60dp">




    <LinearLayout
        android:layout_width="62dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/list_text_margin_left"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_item_followups_date"
            android:text="00-00-00"
            android:textColor="@color/black"


            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_item_followups_time"
            android:text="Lorem Ipsum"
            android:textColor="@color/black"


            />

    </LinearLayout>
<LinearLayout
    android:layout_width="2dp"
    android:layout_height="60dp"
    android:background="@color/lightGray"
    android:layout_marginLeft="@dimen/list_text_margin_left"></LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/list_text_margin_left"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_item_followups_name"
            android:text="Lorem Ipsum"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_gravity=""
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_item_followups_note"
            android:text="Lorem Ipsum"
            android:textColor="@color/black"


            />

    </LinearLayout>

</LinearLayout>