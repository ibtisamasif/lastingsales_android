<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tag_number"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transpartent_black"
    android:orientation="vertical"
    tools:context="com.example.muzafarimran.lastingsales.activities.TagNumberActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="6dp"
        android:animateLayoutChanges="true"
        android:background="@drawable/shadow_borders2"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:text="@string/please_tag_this_call"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/tag_contact_text_color"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:orientation="horizontal"
            android:background="@color/lightGray">
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/number"
                android:textSize="16sp"
                android:id="@+id/textView2"
                android:textColor="@color/tag_contact_text_color"/>

            <TextView
                android:id="@+id/tvNumberTagCallPopup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/number"
                android:textSize="16sp"
                android:textColor="@color/tag_contact_text_color"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/collegue_radio"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="0.33"
                android:background="@drawable/button_tags"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:radius="5dip"
                android:tag="sales_radio"
                android:text="@string/collegue"
                android:textColor="#ffffff"
                android:textSize="12sp"
                />

            <Button
                android:id="@+id/sales_radio"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="0.33"
                android:background="@drawable/button_tags"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:radius="5dip"
                android:tag="collegue_radio"
                android:text="@string/sales"
                android:textColor="#ffffff"
                android:textSize="12sp"
                />

            <Button
                android:id="@+id/personal_radio"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_weight="0.33"
                android:background="@drawable/button_tags"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:radius="5dip"
                android:tag="personal_radio"
                android:text="@string/non_busin"
                android:textColor="#ffffff"
                android:textSize="12sp"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:orientation="horizontal"
            android:background="@color/lightGray">
        </LinearLayout>

    </LinearLayout>
</LinearLayout>