<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tag_number"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transpartent_black"
    android:orientation="vertical"
    tools:context="com.example.muzafarimran.lastingsales.activities.TagNumberActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:animateLayoutChanges="true"
        android:background="@drawable/shadow_borders2"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:text="@string/please_tag_this_call"
            android:textSize="18sp"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/number"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tvNumberTagCallPopup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/number"
                android:textStyle="bold"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/collegue_radio"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.33"
                android:background="@drawable/btn_transparent_white_border"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:radius="5dip"
                android:tag="sales_radio"
                android:text="COLLEGUE"
                android:textColor="#ffffff"
                android:textSize="11sp"
                />

            <Button
                android:id="@+id/sales_radio"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="120dp"
                android:layout_height="30dp"

                android:layout_marginRight="10dp"
                android:layout_weight="0.33"
                android:background="@drawable/btn_primary"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:radius="5dip"
                android:tag="collegue_radio"
                android:text="SALES"
                android:textColor="#ffffff"
                android:textSize="11sp"
                />

            <Button
                android:id="@+id/personal_radio"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="120dp"
                android:layout_height="30dp"

                android:layout_weight="0.33"
                android:background="@drawable/btn_transparent_white_border"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:radius="5dip"
                android:tag="personal_radio"
                android:text="PERSONAL"
                android:textColor="#ffffff"
                android:textSize="11sp"
                />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/nameAndButtonForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/name"
                    android:textStyle="bold"
                    />

                <EditText
                    android:id="@+id/etNameTagCallPopup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:hint="@string/name"
                    android:textStyle="bold"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                >

                <Button
                    android:id="@+id/bCancelTagCallPopup"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.33"
                    android:background="@drawable/btn_transparent_white_border"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:radius="5dip"
                    android:tag="personal_radio"
                    android:text="Cancle"
                    android:textColor="#ffffff"
                    android:textSize="11sp"
                    />

                <Button
                    android:id="@+id/bSaveTagCallPopup"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="0.33"
                    android:background="@drawable/btn_transparent_white_border"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:radius="5dip"
                    android:tag="personal_radio"
                    android:text="@string/save"
                    android:textColor="#ffffff"
                    android:textSize="11sp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>