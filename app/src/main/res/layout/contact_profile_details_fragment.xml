                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/lead_name_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:paddingRight="10dp"
                        android:src="@drawable/ic_contact_detail_name_field"
                        android:tint="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/lead_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/lead_name_icon"
                        android:layout_toRightOf="@+id/lead_name_icon"
                        android:text="Name"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="500dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/lead_name_text"
                        android:gravity="center|right" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/lead_number_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:paddingRight="10dp"
                        android:src="@drawable/ic_contact_detail_number_field"
                        android:tint="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/lead_number_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/lead_number_icon"
                        android:layout_toRightOf="@+id/lead_number_icon"
                        android:text="Number"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvNumber"
                        android:layout_width="500dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/lead_number_text"
                        android:gravity="center|right" />

