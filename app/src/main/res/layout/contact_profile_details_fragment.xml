<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/contactDetailsDropDownLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/user_call_group_wrapper"
        android:background="@drawable/contact_detail_drop_down_bg"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:id="@+id/email_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                >

                <ImageView
                    android:id="@+id/email_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:paddingRight="10dp"
                    android:src="@drawable/add_contact_email_field_icon"/>


                <TextView
                    android:id="@+id/email_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/email_icon"
                    android:layout_toEndOf="@+id/email_icon" />


                <EditText
                    android:layout_width="500dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/email_label"
                    android:layout_marginTop="50dp"
                    android:hint="Enter Email"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lead_status_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                >

                <ImageView
                    android:id="@+id/lead_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:paddingRight="10dp"
                    android:src="@drawable/ic_plain_status_white"/>


                <TextView
                    android:id="@+id/lead_status_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/lead_icon"
                    android:layout_toEndOf="@+id/lead_icon" />

                <Spinner
                    android:id="@+id/lead_status_spinner"
                    android:layout_width="500dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/lead_status_label"
                    android:layout_marginTop="50dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/custom_tag_row1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                >

                <ImageView
                    android:id="@+id/custom_icon1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:paddingRight="10dp"
                    android:src="@drawable/add_contact_email_field_icon"/>


                <TextView
                    android:id="@+id/custom_label1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Custom Tag"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/custom_icon1"
                    android:layout_toEndOf="@+id/custom_icon1" />

                <Spinner
                    android:id="@+id/custom_tag_spinner1"
                    android:layout_width="500dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/custom_label1"
                    android:layout_marginTop="50dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/custom_row2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                >

                <ImageView
                    android:id="@+id/custom_icon2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:paddingRight="10dp"
                    android:src="@drawable/add_contact_email_field_icon"/>


                <TextView
                    android:id="@+id/custom_label2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Custom Tag"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/custom_icon2"
                    android:layout_toEndOf="@+id/custom_icon2" />



                <Spinner
                    android:id="@+id/custom_tag_spinner2"
                    android:layout_width="500dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/custom_label2"
                    android:layout_marginTop="50dp" />

            </RelativeLayout>

            <Button
                android:id="@+id/contactDetailsDropDownDetailsButton"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_transparent_white_border"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="6dp"
                android:radius="5dip"
                android:tag="personal_radio"
                android:text="Save"
                android:textColor="@color/white"
                android:textSize="14sp"
                />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>