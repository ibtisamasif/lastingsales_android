<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contact_row"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="0dp"
    android:paddingTop="10dp"
    >

    <RelativeLayout
        android:id="@+id/user_call_group_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        >

        <RelativeLayout
            android:id="@+id/user_call_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >

            <ImageView
                android:id="@+id/user_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="0dp"
                android:src="@drawable/user_avatar_icon_gray_border"
                />

            <RelativeLayout

                android:id="@+id/user_call_group_name_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/user_avatar"
                android:paddingLeft="15dp"
                >

                <TextView
                    android:id="@+id/contact_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="name"
                    android:textSize="15dp"
                    />

                <TextView
                    android:id="@+id/contactNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/contact_name"
                    android:text="time"
                    android:textSize="10dp"/>

            </RelativeLayout>
        </RelativeLayout>

        <ImageButton
            android:id="@+id/deleteButtonContactRow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/call_icon"
            android:background="@drawable/trash_circle_red_128"
            />


        <ImageView
            android:id="@+id/call_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="10dp"
            android:scaleType="fitEnd"
            android:src="@drawable/make_call_icon"

            />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/contactDetailsDropDownLayout"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_below="@id/user_call_group_wrapper"
        android:background="@drawable/contact_detail_drop_down_bg"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:id="@+id/status_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                >

                <ImageView
                    android:id="@+id/status_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:paddingRight="10dp"
                    android:src="@drawable/ic_plain_status_white"/>


                <TextView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/status_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/status_icon"
                    android:text="@string/status"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    >


                    <TextView
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/status_text"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="3dp"
                        android:gravity="center"
                        android:scaleType="fitEnd"
                        android:text="Prospect"
                        android:textColor="#ffffff"
                        android:textSize="12sp"

                        />

                    <ImageView
                        android:id="@+id/ivMoreButtonContactsDetailsDropDown"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_down_white"
                        />

                </LinearLayout>


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/number_calls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                >

                <ImageView
                    android:id="@+id/calls_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingRight="10dp"
                    android:src="@drawable/number_calls_icon"/>


                <TextView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/calls_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/calls_icon"
                    android:text="@string/calls"
                    android:textColor="#ffffff"
                    android:textSize="12dp"
                    />


                <TextView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/calls_text"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:scaleType="fitEnd"
                    android:text="4"
                    android:textColor="#ffffff"
                    android:textSize="12dp"

                    />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/last_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                >

                <ImageView
                    android:id="@+id/last_contact_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingRight="10dp"
                    android:src="@drawable/last_contact_icon"
                    />

                <TextView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/last_contact_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/last_contact_icon"
                    android:text="Last Contact"
                    android:textColor="#ffffff"
                    android:textSize="12dp"
                    />

                <TextView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/last_contact_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitEnd"
                    android:text="2 Days Ago"
                    android:textColor="#ffffff"
                    android:textSize="12dp"
                    />

            </RelativeLayout>

            <Button
                android:id="@+id/contactDetailsDropDownDetailsButton"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_transparent_white_border"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="4dp"
                android:radius="5dip"
                android:tag="personal_radio"
                android:text="Details"
                android:textColor="@color/white"
                android:textSize="14sp"
                />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>