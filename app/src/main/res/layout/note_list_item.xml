<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/ic_account_circle"
            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/list_text_margin_left"
            android:layout_marginRight="60dp"
            android:layout_toRightOf="@id/avatar"
            android:layout_weight="7"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/list_item_notes_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity=""
                android:text="Lorem Ipsum"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/list_item_note_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lorem Ipsum"
                android:textColor="@color/black"


                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/list_text_margin_left"
            android:layout_weight="2"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/list_item_note_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity=""
                android:text="Lorem Ipsum"
                android:textColor="@color/black"
                android:textSize="11dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/list_item_note_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lorem Ipsum"
                android:textColor="@color/black"
                android:textSize="11dp"


                />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/note_details_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/totem_blue"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_note_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="15dp"
            android:text="Lorem Ipsum"
            android:textColor="@color/white"
            />

    </LinearLayout>
</LinearLayout>