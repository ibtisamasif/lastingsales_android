<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:weightSum="1"
              tools:mContext="com.example.muzafarimran.lastingsales.activities.AddContactActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:text="@string/add_contact"
                android:textColor="#ffffff"
                android:textSize="20sp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="10dp"
                >

                <Button
                    android:id="@+id/b_import_contact"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                        android:paddingBottom="5dp"
                    android:paddingLeft="20dp"
                    android:paddingStart="20dp"
                    android:paddingRight="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="5dp"
                    android:radius="5dip"
                    android:scaleType="fitEnd"
                    android:text="@string/import_btn"
                    android:textColor="#ffffff"
                    android:textSize="13sp"
                    />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal"
                android:paddingBottom="3dp"
                android:paddingLeft="20dp"
                >

                <ImageView
                    android:id="@+id/add_contact_name_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:paddingRight="20dp"
                    android:paddingTop="5dp"
                    />

                <EditText
                    android:id="@+id/contact_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_toRightOf="@id/add_contact_name_icon"
                    android:layout_toEndOf="@id/add_contact_name_icon"
                    android:ems="10"
                    android:hint="@string/contact_name"
                    android:inputType="textPersonName"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"
                    tools:ignore="ObsoleteLayoutParam" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal"
                android:paddingBottom="3dp"
                android:paddingLeft="20dp"
                android:paddingStart="20dp"
                >

                <ImageView
                    android:id="@+id/add_contact_phone_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:paddingRight="30dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="5dp"
                    />

                <EditText
                    android:id="@+id/contact_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_toRightOf="@id/add_contact_phone_icon"
                    android:ems="10"
                    android:hint="@string/contact_phone"
                    android:inputType="numberDecimal"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal"
                android:paddingBottom="3dp"
                android:paddingLeft="20dp"
                >

                <ImageView
                    android:id="@+id/add_contact_email_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:paddingRight="23dp"
                    android:paddingTop="5dp"
                    />

                <EditText
                    android:id="@+id/contact_email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/add_contact_email_icon"
                    android:ems="10"
                    android:hint="EMAIL*"
                    android:inputType="textPersonName"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal"
                android:paddingBottom="3dp"
                android:paddingLeft="20dp"
                >

                <ImageView
                    android:id="@+id/add_contact_notes_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingBottom="15dp"
                    android:paddingRight="25dp"
                    android:paddingTop="0dp"
                    />

                <EditText
                    android:id="@+id/contact_notes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/add_contact_notes_icon"
                    android:ems="10"
                    android:hint="NOTES"
                    android:inputType="textMultiLine"
                    android:lines="2"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"
                    />
            </LinearLayout>
            <!--Edit contact Entities begin here-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:id="@+id/phone_two_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:orientation="horizontal"
                    android:paddingBottom="3dp"
                    android:paddingLeft="20dp"
                    >

                    <ImageView
                        android:id="@+id/add_contact_phone_icon_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="15dp"
                        android:paddingRight="30dp"
                        android:paddingTop="5dp"
                        />

                    <EditText
                        android:id="@+id/et_contact_phone_two"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"

                        android:layout_toRightOf="@id/add_contact_phone_icon"
                        android:ems="10"
                        android:hint="PHONE 2"
                        android:inputType="numberDecimal"
                        android:textColor="#ffffff"
                        android:textColorHint="#ffffff"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/description_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:orientation="horizontal"
                    android:paddingBottom="3dp"
                    android:paddingLeft="20dp"
                    >

                    <ImageView
                        android:id="@+id/description_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="15dp"
                        android:paddingRight="30dp"
                        android:paddingTop="5dp"
                        />

                    <EditText
                        android:id="@+id/et_contact_description"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/add_contact_phone_icon"
                        android:ems="10"
                        android:hint="DESCRIPTION"
                        android:inputType="numberDecimal"
                        android:textColor="#ffffff"
                        android:textColorHint="#ffffff"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/company_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:orientation="horizontal"
                    android:paddingBottom="3dp"
                    android:paddingLeft="20dp"
                    >

                    <ImageView
                        android:id="@+id/company_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="15dp"
                        android:paddingRight="30dp"
                        android:paddingTop="5dp"
                        />

                    <EditText
                        android:id="@+id/et_contact_company"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/add_contact_phone_icon"
                        android:ems="10"
                        android:hint="COMPANY"
                        android:inputType="numberDecimal"
                        android:textColor="#ffffff"
                        android:textColorHint="#ffffff"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/address_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:orientation="horizontal"
                    android:paddingBottom="3dp"
                    android:paddingLeft="20dp"
                    >

                    <ImageView
                        android:id="@+id/address_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="15dp"
                        android:paddingRight="30dp"
                        android:paddingTop="5dp"
                        />

                    <EditText
                        android:id="@+id/et_contact_address"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/add_contact_phone_icon"
                        android:ems="10"
                        android:hint="ADDRESS"
                        android:inputType="numberDecimal"
                        android:textColor="#ffffff"
                        android:textColorHint="#ffffff"
                        />
                </LinearLayout>
            </LinearLayout>
            <!--    Edit contact Entities End here  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_weight="0.13"
                android:orientation="horizontal"
                >

                <Button
                    android:id="@+id/collegue_radio"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.33"
                    android:paddingBottom="5dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:radius="5dip"
                    android:tag="sales_radio"
                    android:text="COLLEGUE"
                    android:textColor="#ffffff"
                    android:textSize="13sp"
                    />

                <Button
                    android:id="@+id/sales_radio"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.33"
                        android:paddingBottom="5dp"
                    android:paddingLeft="14dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:radius="5dip"
                    android:tag="collegue_radio"
                    android:text="SALES"
                    android:textColor="#ffffff"
                    android:textSize="13sp"
                    />

                <Button
                    android:id="@+id/personal_radio"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.33"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:radius="5dip"
                    android:tag="personal_radio"
                    android:text="PERSONAL"
                    android:textColor="#ffffff"
                    android:textSize="11sp"
                    />

            </LinearLayout>

            <Button
                android:id="@+id/add_contact_cta"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:padding="0dp"
                android:radius="5dip"
                android:text="ADD CONTACT"
                android:textColor="#ffffff"
                android:textSize="15sp"
                />

            <Button
                android:id="@+id/save_contact_cta"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:padding="0dp"
                android:radius="5dip"
                android:text="SAVE CONTACT"
                android:textColor="#ffffff"
                android:textSize="15sp"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>