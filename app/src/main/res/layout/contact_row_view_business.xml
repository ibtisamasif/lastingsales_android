<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contact_row"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="0dp"
    android:paddingTop="10dp"
    >

    <RelativeLayout
        android:id="@+id/user_call_group_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        >

        <RelativeLayout
            android:id="@+id/user_call_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            >

            <ImageView
                android:id="@+id/user_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="0dp"
                android:src="@drawable/ic_account_circle"
                android:layout_centerVertical="true"
                />

            <RelativeLayout

                android:id="@+id/user_call_group_name_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/user_avatar"
                android:paddingLeft="15dp"
                >

                <TextView
                    android:id="@+id/contact_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="name"
                    android:textSize="15sp"
                    />

                <TextView
                    android:id="@+id/contactNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/contact_name"
                    tools:text="time"
                    android:textSize="10sp"/>

            </RelativeLayout>
        </RelativeLayout>

        <ImageButton
            android:id="@+id/deleteButtonContactRow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/call_icon"
            android:background="@drawable/trash_circle_red_128"

            />


        <ImageView
            android:id="@+id/call_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="10dp"
            android:scaleType="fitEnd"
            android:src="@drawable/ic_call_green"
            />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/contactTagDropDownLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/user_call_group_wrapper"
        android:background="@drawable/contact_detail_drop_down_bg"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:layout_gravity="center">

            <Button
                android:id="@+id/contactDropDownIgnoreButton"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_transparent_white_border"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="4dp"
                android:radius="5dip"
                android:text="Ignore"
                android:textColor="@color/white"
                android:textSize="14sp"
                />
            <Button
                android:id="@+id/contactDropDownAddAsLeadButton"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@id/contactDropDownIgnoreButton"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_transparent_white_border"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="4dp"
                android:radius="5dip"
                android:text="Add As Lead"
                android:textColor="@color/white"
                android:textSize="14sp"
                />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>