<bblchat.BubbleLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false">

    <LinearLayout
        android:id="@+id/avatar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        android:windowAnimationStyle="@android:style/Animation.Translucent"
        android:windowBackground="@android:color/transparent"
        android:windowIsTranslucent="true"
        android:scaleType="centerCrop"
        android:layout_gravity="center"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="15sp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:background="@drawable/bubble_counter_bkg"
            android:text="1"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shadow_borders"
            android:orientation="vertical"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/shape_rounded_rectangle_banner_bg"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"

                >

                <ImageView
                    android:id="@+id/imBanner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/banner"

                    />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/sliderImageViewParentLayout"
                android:layout_width="250dp"
                android:layout_height="150dp"

                >



                <TextView
                    android:id="@+id/tvN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Note x"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_alignLeft="@+id/tvNoteTextUIOCallPopup"
                    android:layout_alignStart="@+id/tvNoteTextUIOCallPopup" />
                    <TextView
                        android:id="@+id/tvNoteTextUIOCallPopup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Note y"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="60dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginRight="20dp"/>
                <TextView
                    android:id="@+id/tvNoteTextUIO"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Note z"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_marginTop="100dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_alignLeft="@+id/tvNoteTextUIOCallPopup"
                    android:layout_alignStart="@+id/tvNoteTextUIOCallPopup" />





            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_rounded_rectangle_buttons_bg"
                >


                <ImageButton
                    android:id="@+id/closeImageButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/close_icon"

                    />


            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</bblchat.BubbleLayout>