                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="9"
                android:background="@color/blueDark"
                android:src="@drawable/ic_close_white" />

        </LinearLayout>

        <ScrollView
