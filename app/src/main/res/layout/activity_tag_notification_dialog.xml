                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:padding="12dp"
                android:text="Save Contact"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold" />

            <ImageButton
