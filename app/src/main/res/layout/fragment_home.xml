<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <android.support.v7.widget.CardView
                    android:id="@+id/lltotalLeadsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="5dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    card_view:cardElevation="8dp"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal"
                        android:weightSum="0">

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#083D5D"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvTotalLeadsValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" 0 "
                                android:textColor="#ffffff"
                                android:textSize="40sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="180dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:background="#155072"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/total_Leads_today"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Leads"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#155072"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/total_leads_today_icon"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginBottom="2dp"
                                android:paddingLeft="4dp"
                                android:src="@drawable/ic_visibility_white_48dp" />
                        </LinearLayout>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/llinquriesContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lltotalLeadsContainer"
                    android:layout_margin="5dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    card_view:cardElevation="8dp"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal"
                        android:weightSum="0">

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#083D5D"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvInquriesValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" 0 "
                                android:textColor="#ffffff"
                                android:textSize="40sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="180dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:background="#155072"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/inquriess_today"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Inquiries"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#155072"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/follow_ups_today_icon"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginBottom="2dp"
                                android:paddingLeft="4dp"
                                android:src="@drawable/ic_visibility_white_48dp" />
                        </LinearLayout>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/llUnlabeledContactsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/llinquriesContainer"
                    android:layout_margin="5dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    card_view:cardElevation="8dp"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="0">

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvUntaggeContactsVal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text=" 0 "
                                android:textColor="#ffffff"
                                android:textSize="40sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="180dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/untagged_contacts"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Unlabeled Leads"
                                android:textColor="#ffffff"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#F36A5A"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/untagged_contacts_icon"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginBottom="1dp"
                                android:paddingLeft="4dp"
                                android:src="@drawable/ic_visibility_white_48dp" />
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/llInActiveLeadsContactsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/llUnlabeledContactsContainer"
                    android:layout_margin="5dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    card_view:cardElevation="8dp"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal"
                        android:weightSum="0">

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvInactiveLeadsValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" 0 "
                                android:textColor="#ffffff"
                                android:textSize="40sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="180dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/inactive_leads"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Inactive Leads"
                                android:textColor="#ffffff"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#3C8687"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/inactive_leads_icon"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginBottom="3dp"
                                android:paddingLeft="4dp"
                                android:src="@drawable/ic_visibility_white_48dp" />
                        </LinearLayout>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_ratings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/llInActiveLeadsContactsContainer"
                    android:layout_margin="5dp"
                    card_view:cardElevation="8dp"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:padding="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="232dp"
                            android:layout_height="1dp"
                            android:layout_gravity="right"
                            android:layout_marginTop="5dp"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Your Performance Score"
                                android:textAllCaps="true"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="20dp"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginTop="4dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginRight="10dp"
                                    android:text="Interaction"
                                    android:textSize="14dp" />

                                <RatingBar
                                    android:id="@+id/rbLastVisitHighlight"
                                    style="?android:attr/ratingBarStyleIndicator"
                                    android:layout_width="174dp"
                                    android:layout_height="wrap_content" />

                                <ImageView
                                    android:id="@+id/ivLastVisitHighlightTooltip"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginStart="10dp"
                                    android:src="@drawable/ic_info" />

                                <!--<RatingBar-->
                                <!--android:id="@+id/ratingBar3"-->
                                <!--style="?android:attr/ratingBarStyleIndicator"-->
                                <!--android:layout_width="176dp"-->
                                <!--android:layout_height="wrap_content" />-->
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginTop="4dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginRight="10dp"
                                    android:text="Inquiries    "
                                    android:textSize="14dp" />

                                <RatingBar
                                    android:id="@+id/rbInquiriesHighlight"
                                    style="?android:attr/ratingBarStyleIndicator"
                                    android:layout_width="174dp"
                                    android:layout_height="wrap_content" />

                                <ImageView
                                    android:id="@+id/ivInquiriesHighlightTooltip"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginStart="10dp"
                                    android:src="@drawable/ic_info" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            <com.github.paolorotolo.expandableheightlistview.ExpandableHeightListView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/calls_list"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_below="@+id/cv_ratings"
                android:divider="@null"
                android:dividerHeight="0dp">
            </com.github.paolorotolo.expandableheightlistview.ExpandableHeightListView>

