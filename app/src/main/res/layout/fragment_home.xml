<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:id="@+id/llColumnsHomeScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="0"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <android.support.v7.widget.CardView
            android:id="@+id/llinquriesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:weightSum="0">

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#083D5D"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvInquriesValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 0 "
                        android:textColor="#ffffff"
                        android:textSize="40sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="#155072"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/inquriess_today"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Inquiries"
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#155072"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/follow_ups_today_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="2dp"
                        android:paddingLeft="4dp"
                        android:src="@drawable/ic_visibility_white_48dp" />
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <!--<LinearLayout-->
        <!--android:id="@+id/llshadow1"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="2dp"-->
        <!--android:background="@drawable/border_sides_home_screen"-->
        <!--android:orientation="horizontal"></LinearLayout>-->

        <android.support.v7.widget.CardView
            android:id="@+id/llUnlabeledContactsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="0">

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/redDark"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvUntaggeContactsVal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text=" 0 "
                        android:textColor="#ffffff"
                        android:textSize="40sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/redLight"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/untagged_contacts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Unlabeled Leads"
                        android:textColor="#ffffff"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#F36A5A"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/untagged_contacts_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="1dp"
                        android:paddingLeft="4dp"
                        android:src="@drawable/ic_visibility_white_48dp" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <!--<LinearLayout-->
        <!--android:id="@+id/llshadow2"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="2dp"-->
        <!--android:background="@drawable/border_sides_home_screen"-->
        <!--android:orientation="horizontal"></LinearLayout>-->

        <android.support.v7.widget.CardView
            android:id="@+id/llInActiveLeadsContactsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:weightSum="0">

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/greenDark"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvInactiveLeadsValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 0 "
                        android:textColor="#ffffff"
                        android:textSize="40sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/greenLight"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/inactive_leads"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Inactive Leads"
                        android:textColor="#ffffff"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#3C8687"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/inactive_leads_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="3dp"
                        android:paddingLeft="4dp"
                        android:src="@drawable/ic_visibility_white_48dp" />
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <!--<LinearLayout-->
        <!--android:id="@+id/llshadow3"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="2dp"-->
        <!--android:background="@drawable/border_sides_home_screen"-->
        <!--android:orientation="horizontal"></LinearLayout>-->

        <LinearLayout
            android:id="@+id/llshadow4"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/border_sides_home_screen"
            android:orientation="horizontal"></LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llColumnsHomeScreen"
        android:layout_marginTop="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="232dp"
                android:layout_height="1dp"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:background="@color/lightGray"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="0.5"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/upcoming_inquriess"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upcoming Followups"
                        android:textAllCaps="true"
                        android:textColor="@color/darkGray"
                        android:textSize="10sp" />

                    <FrameLayout
                        android:id="@+id/followupsListHolderFrameLayout"
                        android:layout_width="match_parent"
                        android:layout_height="600dp"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/material_design_android_floating_action_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        app:fab_hideAnimation="@anim/fab_scale_down"
        app:fab_showAnimation="@anim/fab_scale_up"
        fab:menu_animationDelayPerItem="55"
        fab:menu_backgroundColor="@android:color/transparent"
        fab:menu_buttonSpacing="0dp"
        fab:menu_colorNormal="@color/fab_contact_menu_normal"
        fab:menu_colorPressed="@color/fab_contact_menu_pressed"
        fab:menu_colorRipple="#99d4d4d4"
        fab:menu_fab_size="normal"
        fab:menu_icon="@drawable/ic_person_add_white"
        fab:menu_labels_colorNormal="@color/fab_contact_menu_text_background_normal"
        fab:menu_labels_colorPressed="@color/fab_contact_menu_text_background_pressed"
        fab:menu_labels_colorRipple="#66efecec"
        fab:menu_labels_cornerRadius="3dp"
        fab:menu_labels_ellipsize="none"
        fab:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
        fab:menu_labels_margin="0dp"
        fab:menu_labels_maxLines="-1"
        fab:menu_labels_padding="8dp"
        fab:menu_labels_position="left"
        fab:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
        fab:menu_labels_showShadow="true"
        fab:menu_labels_singleLine="false"
        fab:menu_labels_textColor="#f2f1f1"
        fab:menu_labels_textSize="15sp"
        fab:menu_openDirection="up"
        fab:menu_shadowColor="@color/darkGray"
        fab:menu_shadowRadius="4dp"
        fab:menu_shadowXOffset="1dp"
        fab:menu_shadowYOffset="4dp"
        fab:menu_showShadow="true">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/material_design_floating_action_menu_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_input_add"
            app:fab_colorNormal="@color/fab_add_contact_normal"
            app:fab_colorPressed="@color/fab_add_contact_pressed"
            fab:fab_label="Add Lead"
            fab:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/material_design_floating_action_menu_import"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_action_search"
            app:fab_colorNormal="@color/fab_import_contact_normal"
            app:fab_colorPressed="@color/fab_import_contact_pressed"
            fab:fab_label="Import from Phonebook"
            fab:fab_size="mini" />

    </com.github.clans.fab.FloatingActionMenu>

</RelativeLayout>