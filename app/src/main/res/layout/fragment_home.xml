<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="0.9"
              android:background="@drawable/app_background"
              android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_weight="0.33"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/inactive_leads_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingLeft="0dp"
                android:src="@drawable/inactive_leads_icon"
                />

            <TextView
                android:id="@+id/inactive_leads"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inactive Leads"
                android:textAllCaps="true"
                android:textColor="#ffffff"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/tvInactiveLeadsValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(2)"
                android:textColor="#b7ccf6"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/llUntaggedContactsContainer"
            >

            <ImageView
                android:id="@+id/untagged_contacts_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingLeft="0dp"
                android:src="@drawable/untagged_contacts_icon"
                />

            <TextView
                android:id="@+id/untagged_contacts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Untagged Contacts"
                android:textAllCaps="true"
                android:textColor="#ffffff"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/untagged_contacts_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="(0)"
                android:textColor="#b7ccf6"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.33"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/follow_ups_today_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingLeft="0dp"
                android:src="@drawable/follow_ups_today_icon"
                />

            <TextView
                android:id="@+id/followups_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Follow-ups Today"
                android:textAllCaps="true"
                android:textColor="#ffffff"
                android:textSize="14sp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="Due"
                    android:textColor="#b7ccf6"
                    />


                <TextView
                    android:id="@+id/followups_today_due"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="(1)"
                    android:textColor="#b7ccf6"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="Done"
                    android:textColor="#b7ccf6"
                    />

                <TextView
                    android:id="@+id/followups_today_done"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="(2)"
                    android:textColor="#b7ccf6"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pending_prospects_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingLeft="0dp"
                android:src="@drawable/pending_prospects_icon"

                />

            <TextView
                android:id="@+id/pending_prospects"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending Prospects"
                android:textAllCaps="true"
                android:textColor="#ffffff"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/tvPendingProspectValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(0)"
                android:textColor="#b7ccf6"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.34"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/response_time_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingLeft="0dp"
                android:src="@drawable/response_time_icon"
                />

            <TextView
                android:id="@+id/avg_response_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avg. Response Time"
                android:textAllCaps="true"
                android:textColor="#ffffff"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/avg_response_time_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(1 hour)"
                android:textColor="#b7ccf6"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>