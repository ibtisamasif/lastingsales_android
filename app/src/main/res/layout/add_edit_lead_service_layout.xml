<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tag_number"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Theme.AppCompat.Light.Dialog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:animateLayoutChanges="true"
        android:background="@drawable/shadow_borders3_white_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:background="@drawable/shape_rounded_rectangle"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:padding="12dp"
                android:text="Is this your sales lead ?"
                android:textColor="@color/md_white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/bClose"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="9"
                android:background="@drawable/close_icon" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llContactDetailsAddContactScreen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:orientation="vertical">


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal"
                android:layout_marginStart="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/number"
                    android:textColor="@color/md_black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/etContactPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textColor="@color/md_black"
                    android:textSize="15sp"
                    tools:text="+92 301 4775234" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:layout_marginStart="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/name"
                    android:textColor="@color/md_black"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/etContactName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="20dp"
                    android:inputType="textPersonName"
                    android:padding="8dp"
                    android:background="#9dc5c5c5"
                    android:textColor="@color/md_black"
                    android:textSize="15sp"
                    tools:text="David Abraham"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="20dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:layout_weight="2">

            <CheckBox
                android:id="@+id/cbIgnore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Click to ignore your personal contact."
                android:textColor="@color/md_black"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="10">

            <Button
                android:id="@+id/bNo"
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/btn_transparent_black_border"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:padding="0dp"
                android:radius="5dip"
                android:layout_marginRight="5dp"
                android:text="NO"
                android:textColor="@color/md_black"
                android:textSize="10sp" />

            <Button
                android:id="@+id/bSaveFollowupPopup"
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/btn_primary"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:padding="0dp"
                android:radius="5dip"
                android:text="YES"
                android:textColor="#ffffff"
                android:textSize="10sp"/>
        </LinearLayout>
        <!--work above this line-->
    </LinearLayout>
</RelativeLayout>