<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contact_bio_section"
        android:background="#18366c"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"
        >



            <ImageView
                android:src="@drawable/user_avatar_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:id="@+id/user_avatar_ind"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="7dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textSize="15dp"
                android:text="test_contact_name"
                android:id="@+id/contact_name_ind"
                android:textColor="#ffffff"
                android:layout_above="@+id/call_numbe_ind"
                android:layout_alignLeft="@+id/call_numbe_ind"
                android:layout_alignStart="@+id/call_numbe_ind" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textSize="15dp"
                android:text="test_contact_number"
                android:id="@+id/call_numbe_ind"
                android:textColor="#ffffff"
                android:layout_alignBottom="@+id/call_icon_ind"
                android:layout_toRightOf="@+id/user_avatar_ind"
                android:layout_toEndOf="@+id/user_avatar_ind" />


            <ImageView
                android:src="@drawable/make_call_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:layout_alignParentRight="true"
                android:scaleType="fitEnd"
                android:id="@+id/call_icon_ind"
                android:layout_marginTop="10dp"

                />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/contact_bio_section_ind"
            android:background="#18366c"
            android:layout_below="@+id/call_numbe_ind"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"

            >

        <Button
            android:id="@+id/b_tag_individual_contact_call_screen"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="Tag"
            android:drawableLeft="@drawable/tag_icon_white"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/btn_transparent_white_border"
            android:textColor="#ffffff"
            android:radius="5dip"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:textSize="12dp"
            android:layout_alignTop="@+id/call_tag_btn_id"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <Button
            android:id="@+id/b_followup_individual_contact_call_screen"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="Follow Up"
            android:drawableLeft="@drawable/follow_ip_icon_white"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="#ffffff"
            android:background="@drawable/btn_transparent_white_border"
            android:radius="5dip"
            android:textSize="12dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"



            android:layout_toRightOf="@+id/b_tag_individual_contact_call_screen"
            android:layout_marginLeft="10dp"
            />

            </RelativeLayout>


    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contact_bio_section"
        android:orientation="vertical">

        <ListView
            android:id="@+id/calls_list"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            >
        </ListView>

    </LinearLayout>

</RelativeLayout>


