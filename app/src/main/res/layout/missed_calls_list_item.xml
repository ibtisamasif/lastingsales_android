<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/call_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="0dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp">

            <RelativeLayout
                android:id="@+id/user_call_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true">

                <RelativeLayout

                    android:id="@+id/user_call_group_wrapper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    >

                    <ImageView
                        android:id="@+id/user_avatar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/user_avatar_icon_gray_border"/>

                    <RelativeLayout
                        android:id="@+id/user_call_group_name_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/user_avatar"
                        android:paddingLeft="16dp"
                        >

                        <TextView
                            android:id="@+id/call_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="name"
                            android:textSize="15sp"
                            />

                        <ImageView
                            android:id="@+id/missed_call_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/call_name"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/missed_call_icon"/>

                        <TextView
                            android:id="@+id/call_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/call_name"
                            android:layout_toEndOf="@id/missed_call_icon"
                            android:layout_toRightOf="@id/missed_call_icon"
                            android:paddingLeft="4dp"
                            android:text="time"
                            android:textSize="10sp"/>
                    </RelativeLayout>
                </RelativeLayout>

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@color/red"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    tools:text="50"
                    android:layout_toStartOf="@id/call_icon"
                    android:layout_toLeftOf="@id/call_icon"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:id="@+id/inquireyCount"
                    android:layout_centerVertical="true"
                    />

                <ImageView
                    android:id="@+id/call_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="10dp"
                    android:scaleType="fitEnd"
                    android:src="@drawable/make_call_icon"/>

            </RelativeLayout>

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rl_calls_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:padding="10dp"
                android:paddingBottom="0dp"
                >

                <TextView
                    android:id="@+id/call_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:paddingLeft="52dp"
                    android:textSize="15dp"
                    tools:text="03234433108"/>

                <RelativeLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/call_number"
                    android:layout_centerHorizontal="true">

                    <Button
                        android:id="@+id/bNonBusinessUntaggedItem"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="120dp"
                        android:layout_height="27dp"
                        android:background="@drawable/btn_primary"
                        android:drawableLeft="@drawable/call_details_icon_white"
                        android:paddingBottom="5dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:radius="5dip"
                        android:text="Details"
                        android:textColor="#ffffff"
                        android:textSize="12dp"
                        />


                    <Button
                        android:id="@+id/call_tag_btn"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="120dp"
                        android:layout_height="27dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/bNonBusinessUntaggedItem"
                        android:background="@drawable/btn_primary"
                        android:drawableLeft="@drawable/tag_icon_white"
                        android:paddingBottom="5dp"
                        android:paddingLeft="30dp"
                        android:paddingRight="25dp"
                        android:paddingTop="5dp"
                        android:radius="5dip"
                        android:text="Tag"
                        android:textColor="#ffffff"
                        android:textSize="12dp"
                        />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>