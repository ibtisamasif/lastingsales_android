<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/call_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingBottom="0dp"
            >

            <RelativeLayout
                android:id="@+id/user_call_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="8dp"
                >

                <RelativeLayout

                    android:id="@+id/user_call_group_wrapper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    >

                    <ImageView
                        android:id="@+id/user_avatar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/user_avatar_icon_gray_border"/>

                    <RelativeLayout
                        android:id="@+id/user_call_group_name_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/user_avatar"
                        android:paddingLeft="16dp"
                        >

                        <TextView
                            android:id="@+id/call_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/unknown_capital"
                            android:textSize="15sp"
                            />

                        <TextView
                            android:id="@+id/call_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/call_name"
                            android:layout_toEndOf="@id/missed_call_icon"
                            android:layout_toRightOf="@id/missed_call_icon"
                            android:paddingLeft="4dp"
                            android:text="time"
                            android:textSize="10sp"

                            />
                    </RelativeLayout>
                </RelativeLayout>

                <ImageView
                    android:id="@+id/call_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="10dp"
                    android:scaleType="fitEnd"
                    android:src="@drawable/make_call_icon"/>

            </RelativeLayout>

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rl_calls_details"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@id/user_call_group"
                android:layout_marginTop="4dp"
                android:background="@drawable/contact_detail_drop_down_bg"
                android:padding="10dp"
                android:paddingBottom="0dp"
                >

                <RelativeLayout
                    android:id="@+id/contacts_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/connectionsIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/ic_connections"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@id/connectionsIcon"
                        android:text="@string/calls"
                        android:textColor="@color/white"
                        />

                    <TextView
                        android:id="@+id/tvConnections"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/white"
                        tools:text=" 5 "
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/last_contact_row_untaggedItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/contacts_row"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/lasContact_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/ic_last_contact"
                        />

                    <TextView
                        android:id="@+id/tvLastContact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"
                        tools:text="19-12-2016 05:15"
                        />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="9dp"
                        android:layout_marginStart="9dp"
                        android:layout_toEndOf="@+id/lasContact_icon"
                        android:layout_toRightOf="@+id/lasContact_icon"
                        android:gravity="center_vertical"
                        android:text="Last Contact"
                        android:textColor="@color/white"
                        />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/last_contact_row_untaggedItem"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal"
                    >

                    <Button
                        android:id="@+id/bNonBusinessUntaggedItem"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="27dp"
                        android:background="@drawable/btn_primary"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:radius="5dip"
                        android:text="@string/non_busines_capital"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        />

                    <Button
                        android:id="@+id/bColleagueUntaggedItem"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="27dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/bNonBusinessUntaggedItem"
                        android:background="@drawable/btn_primary"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:radius="5dip"
                        android:text="@string/colleague_capital"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        />

                    <Button
                        android:id="@+id/bSalesUtaggedItem"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="27dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/bNonBusinessUntaggedItem"
                        android:background="@drawable/btn_primary"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:radius="5dip"
                        android:text="@string/salesCapital"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>