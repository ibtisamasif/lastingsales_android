<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="40dip" />
            <stroke android:width="2dip" android:color="#FFFFFF" />
            <gradient android:angle="-90" android:endColor="@color/blueLighter" android:startColor="@color/blueLighter" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="40dip" />
            <stroke android:width="2dip" android:color="#FFFFFF" />
            <gradient android:angle="-90" android:endColor="@color/blueLighter" android:startColor="@color/blueLighter" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="40dip" />
            <stroke android:width="2dip" android:color="@color/blueLighter" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="40dip" />
            <stroke android:width="2dip" android:color="#FFFFFF" />
            <gradient android:angle="-90" android:endColor="@color/tablayout_leads_background_color_unselected" android:startColor="@color/tablayout_leads_background_color_unselected" />
        </shape>
    </item>
</selector>